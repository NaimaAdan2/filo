                  <li class="nav-item">
                      <a href="/logout"class="nav-link">logout</a>
                  </li>
              </ul>
          </div>
    </nav>
    <form action="/additem" method="POST">
      <div class="container form">
          <h1>Add Item</h1>
          <p>Please fill in this form to add an item.</p>
          <hr>

          <label for="description"><b>Description</b></label>
          <input type="text" placeholder="Enter Description" name="description">

          <label for="category"><b>Category</b></label>
          <input type="text" placeholder="Enter item category" name="category">

          <label for="colour"><b>Colour</b></label>
          <input type="text" placeholder="Enter colour" name="colour" required>

          <label for="date"><b>Date lost</b></label>
          <input type="date" id="inputDate" placeholder="Enter date lost" name="date" required>

          <label for="imageURL"><b>Image url</b></label>
          <input type="text" placeholder="Enter imageURL" name="imageURL" required>

          <button type="submit" class="btn btn-lg btn-primary btn-block">Submit</button>
        </div>
    </form>


    <!-- Optional JavaScript -->
    <!-- jQuery first, then Popper.js, then Bootstrap JS -->
