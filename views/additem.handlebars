  <body>
    <nav class="navbar navbar-expand-lg navbar-dark navbar bg-dark fixed-top">
        <a class="navbar-brand" href="/"><h1><span class="highlight">filo</h1></a>
          <button class="navbar-toggler" type="button"data-toggle="collapse" data-target="#navbarResponsive">
              <span class="navbar-toggler-icon"></span>
          </button>
          <div class="collapse navbar-collapse" id="navbarResponsive">
              <ul class="navbar-nav ml-auto">
                  <li class="nav-item">
                      <a href="/items"class="nav-link">lost items</a>
                  </li>
                  <li class="nav-item">
                      <a href="/additem"class="nav-link">add item</a>
